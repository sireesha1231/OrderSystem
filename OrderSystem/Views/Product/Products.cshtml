@model List<OrderSystem.Models.Product_Details>

@{
    ViewData["Title"] = "Products";
    var products = ViewData["products"] as List<Product_Details>;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">

    <table cellpadding="0" cellspacing="0">

        @foreach (var product in products)
        {
        <tr>
            <td>
                <img src="@product.Product_Image" height="300" width="300" />
                <br />
                <br />
                <p style="font-size:16px;font-weight: 600;">@product.Product_Name</p>
                <p style="font-size:16px;font-weight: 600;color: #97be11;">$@product.Product_Price</p>
                <a class="product-add" href="#">Add To Cart</a>
                <br />
                <br />
            </td>
        </tr>
        }
    </table>
    <br />

</div>
